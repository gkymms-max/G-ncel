{
  "name": "fiyat-teklifi-desktop",
  "version": "1.0.0",
  "description": "Fiyat Teklifi Yönetim Sistemi - Masaüstü Uygulaması",
  "main": "electron-main.js",
  "author": "Fiyat Teklifi",
  "license": "MIT",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"cd frontend && yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-frontend": "cd frontend && yarn build && cd ..",
    "electron-build-win": "yarn build-frontend && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.fiyatteklifi.app",
    "productName": "Fiyat Teklifi",
    "publish": null,
    "files": [
      "electron-main.js",
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Fiyat Teklifi"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.2.0"
  }
}
